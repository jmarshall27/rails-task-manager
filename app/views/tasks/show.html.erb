<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed %>
  <p><i class="far fa-check-square"></i> This task is completed<p>
<% else %>
  <p><i class="far fa-square"></i> This task is not completed yet</p>
<% end %>
<%= link_to 'Edit task', edit_task_path %>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

<%= link_to 'Back', tasks_path %>
