<h1>My tasks</h1>
<ul>
<% @tasks.each do |task| %>
    <% if @task.completed %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <%= link_to task.title, task_path(task.id) %>
<% end %>
</ul>
<p><%= link_to 'Create a new task', new_task_path %></p>
